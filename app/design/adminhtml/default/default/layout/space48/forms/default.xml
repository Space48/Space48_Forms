<?xml version="1.0"?>
<layout>
    <!-- Space48 Forms FORM -->
    <adminhtml_forms_form_index>
        <reference name="content">
            <block type="space48_forms/admin_form" name="space48_forms.form.grid_container" />
        </reference>
    </adminhtml_forms_form_index>
    
    <adminhtml_forms_form_new>
        <update handle="space48_forms_form_add_edit" />
    </adminhtml_forms_form_new>
    
    <adminhtml_forms_form_edit>
        <update handle="space48_forms_form_add_edit" />
    </adminhtml_forms_form_edit>
    
    <adminhtml_forms_form_fieldsetgrid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="space48_forms/admin_form_edit_tab_fieldsets" name="space48_forms.form.edit.tab.fieldsets.grid"/>
        </block>
    </adminhtml_forms_form_fieldsetgrid>
    
    <space48_forms_form_add_edit>
        <update handle="space48_forms_abstract_add_edit"/>
        
        <reference name="left">
            <block type="space48_forms/admin_form_edit_tabs" name="space48_forms.form.edit.tabs" />
        </reference>
        
        <reference name="content">
            <block type="space48_forms/admin_form_edit" name="space48_forms.form.edit" />
        </reference>
    </space48_forms_form_add_edit>
    
    <!-- Space48 Forms FIELDSET -->
    <adminhtml_forms_fieldset_index>
        <reference name="content">
            <block type="space48_forms/admin_fieldset" name="space48_forms.fieldset.grid_container" />
        </reference>
    </adminhtml_forms_fieldset_index>
    
    <adminhtml_forms_fieldset_new>
        <update handle="space48_forms_fieldset_add_edit" />
    </adminhtml_forms_fieldset_new>
    
    <adminhtml_forms_fieldset_edit>
        <update handle="space48_forms_fieldset_add_edit" />
    </adminhtml_forms_fieldset_edit>
    
    <adminhtml_forms_fieldset_fieldsgrid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="space48_forms/admin_fieldset_edit_tab_fields" name="space48_forms.fieldsets.edit.tab.fields.grid"/>
        </block>
    </adminhtml_forms_fieldset_fieldsgrid>
    
    <space48_forms_fieldset_add_edit>
        <update handle="space48_forms_abstract_add_edit"/>
        
        <reference name="left">
            <block type="space48_forms/admin_fieldset_edit_tabs" name="space48_forms.fieldset.edit.tabs" />
        </reference>
        
        <reference name="content">
            <block type="space48_forms/admin_fieldset_edit" name="space48_forms.fieldset.edit" />
        </reference>
    </space48_forms_fieldset_add_edit>
    
    <!-- Space48 Forms FIELD -->
    <adminhtml_forms_field_index>
        <reference name="content">
            <block type="space48_forms/admin_field" name="space48_forms.field.grid_container" />
        </reference>
    </adminhtml_forms_field_index>
    
    <adminhtml_forms_field_new>
        <update handle="space48_forms_field_add_edit" />
    </adminhtml_forms_field_new>
    
    <adminhtml_forms_field_edit>
        <update handle="space48_forms_field_add_edit" />
    </adminhtml_forms_field_edit>
    
    <space48_forms_field_add_edit>
        <update handle="space48_forms_abstract_add_edit"/>
        
        <reference name="left">
            <block type="space48_forms/admin_field_edit_tabs" name="space48_forms.field.edit.tabs" />
        </reference>
        
        <reference name="content">
            <block type="space48_forms/admin_field_edit" name="space48_forms.field.edit" />
        </reference>
    </space48_forms_field_add_edit>
    
    <!-- ABSTRACT -->
    <space48_forms_abstract_add_edit>
        <update handle="editor"/>
        
        <reference name="root">
            <action method="addBodyClass">
                <class>space48-forms-form</class>
            </action>
        </reference>
        
        <reference name="head">
            <action method="addCss">
                <name>space48/forms/css/forms.css</name>
            </action>
            
            <action method="addJs"><js>space48/forms/adminhtml/core.js</js></action>
            <action method="addJs"><js>space48/forms/adminhtml/field.dependency.js</js></action>
            <action method="addJs"><js>space48/forms/adminhtml/fieldset.toggle.js</js></action>
            <action method="addJs"><js>space48/forms/adminhtml/forms.js</js></action>
            
            <action method="setCanLoadExtJs"><flag>1</flag></action>
            <action method="setCanLoadTinyMce"><flag>1</flag></action>
        </reference>
    </space48_forms_abstract_add_edit>
</layout>
